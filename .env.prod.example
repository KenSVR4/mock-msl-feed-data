# ==============================================================================
# BTC Fake - PRODUCTION Environment Configuration
# ==============================================================================

# ==============================================================================
# ML Training Recommender API Configuration
# ==============================================================================
# IMPORTANT: Production API has /public in the base URL
API_BASE_URL=https://dataiku-api-prod.prod.internal.sephora.com/public
API_ENDPOINT=/public/api/v1/mltr/v3/run
API_TIMEOUT=30

# ==============================================================================
# File Path Configuration
# ==============================================================================
EMPLOYEES_FILE=input/employees.csv
OUTPUT_DIR=generated_files
SFTP_LOCAL_DIR=downloaded_files
USER_COMPLETION_TEMPLATE_FILE=docs/sample_files/UserCompletion_v2_YYYY_m_d_1_000001.csv

# ==============================================================================
# Databricks Configuration - PRODUCTION
# ==============================================================================
DATABRICKS_TOKEN=your_databricks_prod_token_here
DATABRICKS_HOST=your_prod_databricks_hostname.azuredatabricks.net
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your_prod_warehouse_id
DATABRICKS_CATALOG=retail_systems_prod
DATABRICKS_SCHEMA=store_enablement

# ==============================================================================
# SFTP Inbound Server Configuration - PRODUCTION
# ==============================================================================
SFTP_INBOUND_HOST=sftp.sephora.com
SFTP_INBOUND_USER=SephoraMSL
SFTP_INBOUND_PASSWORD=your_sftp_prod_password_here
SFTP_INBOUND_REMOTE_PATH=/inbound/BTC/retailData/prod/vendor/mySephoraLearning-archive


# ==============================================================================
# SFTP Outbound Server Configuration (Publishing)
# ==============================================================================
# SFTP outbound server for publishing generated files
# This is the postprocessing step where generated files are uploaded
SFTP_OUTBOUND_HOST=internal-sftp.sephoraus.com
SFTP_OUTBOUND_USER=SephoraRDIInternalxxxxxx
SFTP_OUTBOUND_PASSWORD=your_sftp_outbound_password_here
SFTP_OUTBOUND_REMOTE_PATH=/xxxxxxxxxinbound/BTC/retailData/prod/vendor/mySephoraLearningV2

# Enable/disable SFTP publishing (set to false to bypass publishing)
SFTP_PUBLISH_ENABLED=false