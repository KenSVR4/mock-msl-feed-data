# ==============================================================================
# BTC Fake - Training Completion Simulator Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values

# ==============================================================================
# ML Training Recommender API Configuration
# ==============================================================================
# API base URL varies by environment:
#   DEV/QA: https://dataiku-api-devqa.lower.internal.sephora.com
#   PROD:   https://dataiku-api-prod.prod.internal.sephora.com/public
API_BASE_URL=https://dataiku-api-devqa.lower.internal.sephora.com
API_ENDPOINT=/public/api/v1/mltr/v3/run
API_TIMEOUT=30

# ==============================================================================
# File Path Configuration
# ==============================================================================
# Input and output directory paths
EMPLOYEES_FILE=input/employees.csv
OUTPUT_DIR=generated_files
SFTP_LOCAL_DIR=downloaded_files
USER_COMPLETION_TEMPLATE_FILE=docs/sample_files/UserCompletion_v2_YYYY_m_d_1_000001.csv

# ==============================================================================
# Databricks Configuration
# ==============================================================================
# Databricks Personal Access Token
# Generate from: Databricks Workspace -> User Settings -> Access Tokens
DATABRICKS_TOKEN=your_databricks_personal_access_token_here

# Databricks Server Hostname
# Example: adb-1234567890123456.7.azuredatabricks.net
DATABRICKS_HOST=your_databricks_workspace_hostname_here

# Databricks HTTP Path
# Example: /sql/1.0/warehouses/abc123def456
DATABRICKS_HTTP_PATH=your_databricks_warehouse_http_path_here

# Environment-specific Databricks Catalog
# DEV2: retail_systems_dev
# QA1: retail_systems_qa
# PROD: retail_systems_prod
DATABRICKS_CATALOG=retail_systems_dev

# Databricks Schema (same across environments)
DATABRICKS_SCHEMA=store_enablement

# ==============================================================================
# SFTP Inbound Server Configuration
# ==============================================================================
# SFTP inbound server for downloading course catalog files from BTC vendor
SFTP_INBOUND_HOST=sftp.sephora.com
SFTP_INBOUND_USER=SephoraMSL
SFTP_INBOUND_PASSWORD=your_sftp_inbound_password_here
SFTP_INBOUND_REMOTE_PATH=/inbound/BTC/retailData/prod/vendor/mySephoraLearning-archive

# ==============================================================================
# SFTP Outbound Server Configuration (Publishing)
# ==============================================================================
# SFTP outbound server for publishing generated files
# This is the postprocessing step where generated files are uploaded
SFTP_OUTBOUND_HOST=internal-sftp.sephoraus.com
SFTP_OUTBOUND_USER=SephoraRDIInternal
SFTP_OUTBOUND_PASSWORD=your_sftp_outbound_password_here
SFTP_OUTBOUND_REMOTE_PATH=/inbound/BTC/retailData/prod/vendor/mySephoraLearningV2

# Enable/disable SFTP publishing (set to false to bypass publishing)
SFTP_PUBLISH_ENABLED=true
